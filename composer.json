{
    "name": "catlab-invoice",
    "version": "2.0.0",
    "description": "CatLab Invoice is a self-hosted open source application for managing your invoices, clients and payments",
    "homepage": "https://github.com/CatLabInteractive/catlab-invoice",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "doctrine/dbal": "^2.6",
        "dompdf/dompdf": "^0.8.2",
        "fideloper/proxy": "~3.3",
        "ifsnop/mysqldump-php": "2.*",
        "knplabs/knp-snappy": "^1.0",
        "laravel/framework": "5.5.*",
        "laravelcollective/html": "^5.5",
        "mollie/mollie-api-php": "^1.9",
        "paypal/rest-api-sdk-php": "^1.13",
        "sonata-project/exporter": "^1.8",
        "stripe/stripe-php": "^5.8"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "FI\\": "app/",
            "Addons\\": "custom/addons/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
